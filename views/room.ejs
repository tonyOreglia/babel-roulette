<script src="script.js" defer></script>

<style>
    #video-grid {
        /* generates a block-level grid */
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
    }
    video {
        width: 100%;
        height: 100%;
        /* object-fit: sets how the content of a replaced element, such as an <img> or <video>, should be resized to fit its container. */
        /* cover: The replaced content is sized to maintain its aspect ratio while filling the elementâ€™s entire content box.
        If the object's aspect ratio does not match the aspect ratio of its box, then the object will be clipped to fit. */
        object-fit: cover;
    }
</style>
<body>
    <div id="video-grid"></div>
    <div id="mute_button_container"></div>
    <div id="toggle_video_container"></div>
    <!-- Load React. -->
    <!-- Note: when deploying, replace "development.js" with "production.min.js". -->
    <script src="https://unpkg.com/react@17/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js" crossorigin></script>
    <!-- Load our React component. -->
    <script src="mute_button.js"></script>
    <script src="toggle_video_button.js"></script>
</body>
</html>
